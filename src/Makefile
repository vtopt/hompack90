FORT = gfortran -std=legacy
CFLAG = -c
OPT = 

all: MAINS.o MAINP.o MAINF.o
	./MAINF.o
	./MAINS.o
	./MAINP.o

MAINP.o: MAINP.f HOMPACK90.o LAPACK.o
	$(FORT) $(OPT) MAINP.f HOMPACK90.o LAPACK.o -o MAINP.o

MAINS.o: MAINS.f HOMPACK90.o LAPACK.o
	$(FORT) $(OPT) MAINS.f HOMPACK90.o LAPACK.o -o MAINS.o

MAINF.o: MAINF.f HOMPACK90.o LAPACK.o
	$(FORT) $(OPT) MAINF.f HOMPACK90.o LAPACK.o -o MAINF.o

HOMPACK90.o: HOMPACK90.f
	$(FORT) $(CFLAG) $(OPT) HOMPACK90.f -o HOMPACK90.o

LAPACK.o: LAPACK.f
	$(FORT) $(CFLAG) $(OPT) LAPACK.f -o LAPACK.o

clean:
	rm -rf MAINS.o MAINP.o MAINF.o HOMPACK90.o LAPACK.o *.mod OUTHP.dat
